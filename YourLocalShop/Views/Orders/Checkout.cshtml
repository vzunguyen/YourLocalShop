@model YourLocalShop.Models.ViewModels.CheckoutVm
@{
    ViewData["Title"] = "Checkout";
}

<h1 class="mb-3">Checkout</h1>

<form asp-action="Checkout" method="post">
    @Html.AntiForgeryToken()
    <!-- Account details (read-only, prefilled from logged-in Customer) -->
        <div>
            <label asp-for="Customer.FirstName"></label>
            <input asp-for="Customer.FirstName" />
            <span asp-validation-for="Customer.FirstName"></span>
        </div>

        <div>
            <label asp-for="Customer.LastName"></label>
            <input asp-for="Customer.LastName" />
            <span asp-validation-for="Customer.LastName"></span>
        </div>

        <div>
            <label asp-for="Customer.Email"></label>
            <input asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email"></span>
        </div>

        <div>
            <label asp-for="Customer.Phone"></label>
            <input asp-for="Customer.Phone" />
            <span asp-validation-for="Customer.Phone"></span>
        </div>

    <!-- Recipient address (editable) -->
    <h3 class="mt-4">Delivery Address</h3>
    <div class="mb-3">
        <label asp-for="Customer.Address.UnitNumber" class="form-label">Unit Number (optional)</label>
        <input asp-for="Customer.Address.UnitNumber" class="form-control" />
        <span asp-validation-for="Customer.Address.UnitNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.StreetNumber" class="form-label">Street Number</label>
        <input asp-for="Customer.Address.StreetNumber" class="form-control" />
        <span asp-validation-for="Customer.Address.StreetNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.StreetName" class="form-label">Street Name</label>
        <input asp-for="Customer.Address.StreetName" class="form-control" />
        <span asp-validation-for="Customer.Address.StreetName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.City" class="form-label">City</label>
        <input asp-for="Customer.Address.City" class="form-control" />
        <span asp-validation-for="Customer.Address.City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.State" class="form-label">State</label>
        <select asp-for="Customer.Address.State" class="form-select">
            <option value="VIC">VIC</option>
            <option value="NSW">NSW</option>
            <option value="QLD">QLD</option>
            <option value="SA">SA</option>
            <option value="WA">WA</option>
            <option value="TAS">TAS</option>
            <option value="ACT">ACT</option>
            <option value="NT">NT</option>
        </select>
        <span asp-validation-for="Customer.Address.State" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.Country" class="form-label">Country</label>
        <input asp-for="Customer.Address.Country" class="form-control" />
        <span asp-validation-for="Customer.Address.Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Customer.Address.PostCode" class="form-label">Post Code</label>
        <input asp-for="Customer.Address.PostCode" class="form-control" />
        <span asp-validation-for="Customer.Address.PostCode" class="text-danger"></span>
    </div>

    <!-- Cart summary -->
    <h3 class="mt-4">Your items</h3>
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Product</th>
                    <th class="text-end">Unit price</th>
                    <th class="text-end">Quantity</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end">$@item.UnitPrice</td>
                        <td class="text-end">@item.Quantity</td>
                        <td class="text-end">$@item.Subtotal</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total</th>
                    <th class="text-end">$@Model.Total</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
