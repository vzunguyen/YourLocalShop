@model List<YourLocalShop.Models.Order>

<h2>My Order History</h2>

@if (!Model.Any())
{
    <p>You have no past orders.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Invoice</th>
            <th>Receipt</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.InvoiceId</td>
                <td>@order.ReceiptId</td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-controller="Account" asp-action="Settings" class="btn btn-secondary">
        Back to My Account
    </a>
</div>