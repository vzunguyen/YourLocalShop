@model YourLocalShop.Models.Product

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">@Model.Name</h2>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Category?.Name</h6>

                <p class="card-text mt-3">@Model.Description</p>

                <p class="fw-bold fs-5">Price: $@Model.Price</p>
                <p>Stock available: @Model.StockQty</p>

                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Add to cart</button>
                </form>

                <a asp-action="Index" class="btn btn-link mt-3">Back to Products</a>
            </div>
        </div>
    </div>
</div>