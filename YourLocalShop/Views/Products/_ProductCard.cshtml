@model YourLocalShop.Models.Product
<div class="col">
    <div class="card h-100">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-muted mb-2">@Model.Category?.Name</p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
                <span class="fw-bold">$@Model.Price</span>
                <div class="d-flex gap-2">
                    <a asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@Model.Id"
                       class="btn btn-sm btn-outline-secondary">
                        More details
                    </a>
                <form asp-controller="ShoppingCart" asp-action="Add" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Add to cart</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>